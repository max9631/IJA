<?xml version="1.0" encoding="UTF-8"?>
<project name="ija" default="all">
  
  
  <property file="ija.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8_(2)" value="${jdk.home.1.8_(2)}/bin"/>
  <path id="jdk.classpath.1.8_(2)">
    <fileset dir="${jdk.home.1.8_(2)}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8_(2)}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8_(2)}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8_(2)"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.json-simple-1.1.classpath">
    <pathelement location="${basedir}/lib/json-simple-1.1.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module PublicTransport -->
  
  <dirname property="module.publictransport.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.publictransport" value="${jdk.home.1.8_(2)}"/>
  <property name="module.jdk.bin.publictransport" value="${jdk.bin.1.8_(2)}"/>
  <property name="module.jdk.classpath.publictransport" value="jdk.classpath.1.8_(2)"/>
  
  <property name="compiler.args.publictransport" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="publictransport.output.dir" value="${module.publictransport.basedir}/build"/>
  <property name="publictransport.testoutput.dir" value="${module.publictransport.basedir}/build_test"/>
  
  <path id="publictransport.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="publictransport.module.production.classpath">
    <path refid="${module.jdk.classpath.publictransport}"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  <path id="publictransport.runtime.production.module.classpath">
    <pathelement location="${publictransport.output.dir}"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  <path id="publictransport.module.classpath">
    <path refid="${module.jdk.classpath.publictransport}"/>
    <pathelement location="${publictransport.output.dir}"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  <path id="publictransport.runtime.module.classpath">
    <pathelement location="${publictransport.testoutput.dir}"/>
    <pathelement location="${publictransport.output.dir}"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.publictransport">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.publictransport">
    <patternset refid="excluded.from.module.publictransport"/>
  </patternset>
  
  <path id="publictransport.module.sourcepath">
    <dirset dir="${module.publictransport.basedir}">
      <include name="src"/>
      <include name="data"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.publictransport" depends="compile.module.publictransport.production,compile.module.publictransport.tests" description="Compile module PublicTransport"/>
  
  <target name="compile.module.publictransport.production" depends="register.custom.compilers" description="Compile module PublicTransport; production classes">
    <mkdir dir="${publictransport.output.dir}"/>
    <javac2 destdir="${publictransport.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.publictransport}/javac">
      <compilerarg line="${compiler.args.publictransport}"/>
      <bootclasspath refid="publictransport.module.bootclasspath"/>
      <classpath refid="publictransport.module.production.classpath"/>
      <src refid="publictransport.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.publictransport"/>
    </javac2>
    
    <copy todir="${publictransport.output.dir}">
      <fileset dir="${module.publictransport.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.publictransport.basedir}/data">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.publictransport.tests" depends="register.custom.compilers,compile.module.publictransport.production" description="compile module PublicTransport; test classes" unless="skip.tests"/>
  
  <target name="clean.module.publictransport" description="cleanup module">
    <delete dir="${publictransport.output.dir}"/>
    <delete dir="${publictransport.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.publictransport" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.publictransport" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.publictransport:jar" value="${basedir}/dest"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.PublicTransport.jar" value="${artifacts.temp.dir}/PublicTransport.jar"/>
  </target>
  
  <target name="artifact.publictransport:jar" depends="init.artifacts, compile.module.publictransport" description="Build &#39;PublicTransport:jar&#39; artifact">
    <property name="artifact.temp.output.publictransport:jar" value="${artifacts.temp.dir}/PublicTransport_jar"/>
    <mkdir dir="${artifact.temp.output.publictransport:jar}"/>
    <jar destfile="${temp.jar.path.PublicTransport.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${publictransport.output.dir}"/>
      <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipgroupfileset dir="${basedir}/lib" includes="json-simple-1.1.jar"/>
      <manifest>
        <!-- manifest = soubor s informacemi o souborech ulozenych v jaru -->
        <attribute name="Main-Class" value="Scene.Main"/>
        <!-- Main-Class udava hlavni tridu aplikace. Hodnota je package tridy + nazev tridy-->
      </manifest>
    </jar>
    <copy file="${temp.jar.path.PublicTransport.jar}" tofile="${artifact.temp.output.publictransport:jar}/PublicTransport.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.publictransport:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.publictransport:jar}"/>
    <copy todir="${artifact.output.publictransport:jar}">
      <fileset dir="${artifact.temp.output.publictransport:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>